{
	"name": "Classic Tabs",
	"version": "1.4",
	"manifest_version": 2,
	
	"description": "Emulates Opera 12 tab behaviors",
	"developer": {
		"name": "Joel Spadin",
		"url": "http://chaosinacan.com"
	},
	"icons": { 
		"16": "img/icon-16.png",
		"48": "img/icon-48.png"
	},
	
	"background": {
		"scripts": [
			"js/lib/storage.js",
			"js/settings.js",
			"js/background.js"
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/include/keys.js"]
		}
	],
	"content_security_policy": "default-src 'self'",
	"incognito": "spanning",
	"offline_enabled": true,
	"options_page": "options-page.html",
	"permissions": [
		"tabs", "bookmarks"
	]
}